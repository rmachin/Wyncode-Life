

<div class="container">
  <div class=" blog-content">
    <% @posts.each do |post| %>
    <div class="col-xs-12">
      <div class="text-center">
        <h2><%= post.title %></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
      </div>



         <div class="img-size"><%= raw post.body.truncate(1000) %></div>

      <!-- <%= truncate(strip_tags(post.body), :length => 500) %> -->

      <!-- </div> -->

      <!-- <div class="btn-read text-center"> -->
      <div class="btn-center text-center">
        <%= link_to "Show", post_path(post), class: "btn btn-primary" %>
        <!-- <%= link_to "READ MORE", post_path(post) %> -->
      <!-- </div> -->
      <% if admin_signed_in? %>
      <!-- This block is available to only signed in admins -->
        <%= link_to "Edit", edit_post_path(post), class: "btn btn-default" %>
        <%= link_to "Delete", post_path(post), class: "btn btn-danger", data: {:confirm => "Are you sure?"}, method: :delete %>
        </div>
      <% end %>
      <hr />
    </div>
    <% end %>
  </div>
</div>
